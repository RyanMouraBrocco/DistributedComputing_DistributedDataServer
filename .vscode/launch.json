    "version": "0.2.0",
    "configurations": [
        {
            "name": "data_server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "port": 5001,
            "env": {
                "FLASK_APP": "data/data_server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port", 
                "5001"
            ],
            "jinja": true
        },
        {
            "name": "business_server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "business/business_server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}